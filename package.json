{
  "name": "basic-html-builder",
  "version": "0.0.1",
  "description": "A basic HTML builder",
  "http-server": "./dist",
  "keywords": [
    "HTML",
    "builder"
  ],
  "author": "Michael Mason",
  "license": "ISC",
  "browserslist": [
    "> 1.5%"
  ],
  "watch": {
    "sass": {
      "patterns": [
        "app"
      ],
      "extensions": "sass"
    },
    "copy:html": {
      "patterns": [
        "app"
      ],
      "extensions": "html"
    },
    "lintjs": {
      "patterns": [
        "app"
      ],
      "extensions": "js"
    },
    "lintcss": {
      "patterns": [
        "app"
      ],
      "extensions": "css"
    },
    "postcss": {
      "patterns": [
        "app"
      ],
      "runOnChangeOnly": true,
      "extensions": "css"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch:sass & npm run watch:html & npm run watch:js & npm run watch:css & npm run watch:postcss & npm run server",
    "stop": "stop http-server",
    "sass": "node-sass ./app/sass -o ./app/css",
    "watch:sass": "npm-watch sass",
    "watch:html": "npm-watch copy:html",
    "watch:js": "npm-watch lintjs",
    "watch:css": "npm-watch lintcss",
    "watch:postcss": "npm-watch postcss",
    "lintjs": "./node_modules/.bin/eslint ./app/scripts && npm run copy:js",
    "lintcss": "csslint ./app/css/style.css",
    "postcss": "find app/. -type f -name \"*.css\" | xargs -Ifile ./node_modules/.bin/postcss file -d ./dist/css/",
    "copy:html": "find app/. -type f -name \"*.html\" | xargs -Ifile rsync -vR file dist/ && echo '\n'",
    "copy:css": "find app/. -type f -name \"*.css\" | xargs -Ifile rsync -vR file dist/ && echo file 'copied' '\n'",
    "copy:js": "find app/. -type f -name \"*.js\" | xargs -Ifile rsync -vR file dist/ && echo file 'copied' '\n'",
    "server": "node live-server.js"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "browserslist": "^4.7.3",
    "chromium": "^2.1.1",
    "copyfiles": "^2.1.1",
    "critical": "^1.3.9",
    "csslint": "^1.0.5",
    "cssnano": "^4.1.10",
    "eslint": "^6.6.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "npm-watch": "^0.6.0",
    "postcss": "^7.0.23",
    "postcss-cli": "^6.1.3",
    "postcss-load-config": "^2.1.0",
    "puppeteer": "^2.0.0",
    "yargs": "^15.0.2"
  }
}
