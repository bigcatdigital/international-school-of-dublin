{
  "name": "basic-html-builder",
  "version": "0.0.1",
  "description": "A basic HTML builder",
  "http-server": "./dist",
  "keywords": [
    "HTML",
    "builder"
  ],
  "author": "Michael Mason",
  "license": "ISC",
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "watch": {
    "copyhtml": {
      "patterns": [
        "app"
      ],
      "extensions": "html"
    },
    "lintjs": {
      "patterns": [
        "app"
      ],
      "extensions": "js"
    },
    "lintcss": {
      "patterns": [
        "dist"
      ],
      "extensions": "css"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch:html & npm run watch:js & npm run watch:css & npm run sass & npm run server",
    "stop": "stop http-server",
    "sass": "node-sass -w ./app/sass -o ./dist/css",
    "watch:html": "npm-watch copyhtml",
    "watch:js": "npm-watch lintjs",
    "watch:css": "npm-watch lintcss",
    "lintjs": "./node_modules/.bin/eslint ./app/scripts && npm run copyjs",
    "lintcss": "csslint ./dist/css && npm run postcss",
    "postcss": "./node_modules/.bin/postcss ./dist/css -r",
    "copyhtml": "find app/. -type f -name \"*.html\" | xargs -Ifile rsync -vR file dist/ && echo '\n'",
    "copyjs": "find app/. -type f -name \"*.js\" | xargs -Ifile rsync -vR file dist/ && echo 'files copied' '\n'",
    "server": "node live-server.js"
  },
  "dependencies": {
    "browserslist": "^4.7.3",
    "live-server": "^1.2.1",
    "postcss": "^7.0.23",
    "postcss-cli": "^6.1.3",
    "postcss-preset-env": "^6.7.0"
  },
  "devDependencies": {
    "copyfiles": "^2.1.1",
    "csslint": "^1.0.5",
    "eslint": "^6.6.0",
    "node-sass": "^4.12.0",
    "npm-watch": "^0.6.0"
  }
}
